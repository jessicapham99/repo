      <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
        <% comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :descript %>
    <%= form.text_field :descript %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= collection_select(:comment,:user_id, User.all, :id, :email) %>
  </div>

  <div class="field">
    <%= form.label :article_id %>
    <%= collection_select(:comment,:article_id, Article.all, :id, :name) %>
  </div>

  <div class="field">
    <%= form.label :parent_comment_id %>
    <%= form.number_field :parent_comment_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
