<p id="notice"><%= notice %></p>

<h1 style="margin: 20px; color: #2e59d9; margin-left: 160px">Current user list</h1>

<table class="table table-striped table-bordered" style="margin: 5px; color: black">
  <thead style="color: #dda20a; font-size: 20px">
  <tr>
<!--    <th>Username</th>-->
    <!--      <th>Password</th>-->
    <th>Email</th>
    <th>Fullname</th>
    <th>Phone number</th>
    <th>Gender</th>
    <!--      <th>Address</th>-->
    <!--      <th>Image</th>-->
    <!--      <th>Birth</th>-->
    <!--      <th>Role</th>-->
    <!--      <th>Create time</th>-->
    <th colspan="3"></th>
  </tr>
  </thead>
  <tfoot style="color: #dda20a; font-size: 20px">
  <tr>
    <th>Email</th>
    <th>Username</th>
    <th>Fullname</th>
    <th>Phone number</th>
    <th>Gender</th>
    <th colspan="3"></th>
  </tr>
  </tfoot>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><h6><%= user.email %></h6></td>
      <!--        <td><%#= user.password %></td>-->
      <td><h6><%= user.fullname %></h6></td>

      <td><h6><%= user.phone_number %></h6></td>
      <td><h6><%= user.gender ? "Male" : "Female"%></h6></td>
      <!--        <td><%#= user.address %></td>-->
      <!--        <td><%#= user.image %></td>-->
      <!--        <td><%#= user.birth %></td>-->
      <!--        <td><%#= user.role.descript %></td>-->
      <!--        <td><%#= user.create_time %></td>-->
      <td><button type="button" class="btn btn-outline-warning"><%= link_to 'Show', user %></button></td>
      <td><button type="button" class="btn btn-outline-secondary"><%= link_to 'Edit', edit_user_path(user) %></button></td>
      <td><button type="button" class="btn btn-outline-info"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
    </tr>
  <% end %>
  </tbody>
</table>

